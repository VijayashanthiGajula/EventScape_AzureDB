<li class="nav-item " style=" font-size: 15px; text-transform:uppercase; padding-bottom: 50px;">
<a class="nav-link text-white " asp-area="" asp-controller="Home" asp-action="Index">Home</a>
</li>



<li class="nav-item" style=" font-size: 15px; text-transform:uppercase; padding-bottom: 50px;">
<a class="nav-link text-white" asp-area="" asp-controller="Events" asp-action="Index">User Event</a>
</li>



<li class="nav-item" style=" font-size: 15px; text-transform:uppercase; padding-bottom: 50px;">
<a class="nav-link text-white" asp-area="" asp-controller="Bookings" asp-action="Create">Booking an Event</a>
</li>
<li class="nav-item" style=" font-size: 15px; text-transform:uppercase; padding-bottom: 50px;">
<a class="nav-link text-white" asp-area="" asp-controller="UserQueries" asp-action="Create">Contact Us</a>
</li>



</ul>
}




else
{
<br/>
<ul class=" navbar-nav navbar-expand-lg navbar-toggleable-lg sticky-lg-top" id="NonUserNavBar" style="position:sticky; ">
<li class="nav-item " style=" font-size: 15px; text-transform:uppercase; padding-bottom: 50px;">
<a class="nav-link text-white " asp-area="" asp-controller="Home" asp-action="Index">Home</a>
</li>



<li class="nav-item" style=" font-size: 15px; text-transform:uppercase; padding-bottom: 50px;">
<a class="nav-link text-white" asp-area="" asp-controller="Events" asp-action="Index">User Event</a>
</li>



<li class="nav-item" style=" font-size: 15px; text-transform:uppercase; padding-bottom: 50px;">
<a class="nav-link text-white" asp-area="" asp-controller="Bookings" asp-action="Create">Booking an Event</a>
</li>
<li class="nav-item" style=" font-size: 15px; text-transform:uppercase; padding-bottom: 50px;">
<a class="nav-link text-white" asp-area="" asp-controller="UserQueries" asp-action="Create">Contact Us</a>
</li>



</ul>
}
</div>

</nav>



<!-- sidebar -->

<!-- Page content -->
<div class="col-sm-8 col-md-8 col-lg-9 bg-light flex-fill p-4" id="">
<div class=" bg-white h-auto min-vh-100 p-3">

<main role="main" class="pb-3">
@RenderBody()
</main>
</div>
</div>
</div>


