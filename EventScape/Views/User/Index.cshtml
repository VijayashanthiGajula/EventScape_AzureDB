@{
    ViewData["Title"] = "User page";
}
 @model  ICollection<EventScape.Areas.Identity.Data.ApplicationUser>
 <h1> Registered Users</h1>


 <div class="text-center">
    
    @if ( @Model != null && @Model.Any())
    {     
        
           <table class="table  table-striped">
    <thead>
        <tr>
                <th hidden>#</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
            {              
              <tr scope="row" >
             <th hidden >@user.Id</th>
               <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td> <a asp-controller="User" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                     <a asp-action="Delete" asp-route-id="@user.Id">Delete</a>               
                </td>
            </tr>
            }
    </tbody>
    </table>
    
    } 
</div>