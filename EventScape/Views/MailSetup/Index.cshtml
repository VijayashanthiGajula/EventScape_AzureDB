@model EventScape.Models.Mail

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        @using (Html.BeginForm("Index", "MailSetup", FormMethod.Post, new {enctype = "multipart/form-data"}))
        {
            <center>
            <h4>Mail</h4>
            <hr />
            <table>
                <tr>
                    <td style="width: 80px">
                        To:
                    </td>
                    <td>@Html.TextBoxFor(model=>model.To)</td>
                </tr>
                <tr>
                    <td>
                        Subject:
                    </td>
                    <td>@Html.TextBoxFor(model=>model.Subject)</td>
                </tr>
                <tr>
                    <td valign="top">
                        Body:
                    </td>
                    <td>@Html.TextBoxFor(model=>model.Body, new {rows = "15", cols="25"})</td>
                </tr>
                <tr>
                    <td>
                        <input type="Submit" value="Send" />
                    </td>
                </tr>
            </table>
            <br/>
            <span style="color:green">@ViewBag.Message</span>

            </center>
        }
