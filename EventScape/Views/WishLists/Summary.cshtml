 @model EventScape.ViewModels.ShoppingCartViewModel
<form method="post">
        <br />
        <div class="backgroundWhiteBorder">
            <div class="container">
                <div class="card">
                    <div class="card-header bg-dark text-light ml-0 row container">
                        <div class="col-6">
                            <i class="fa fa-shopping-cart"></i> &nbsp;
                            Booking Summary
                        </div>
                        <div class="col-6 text-right">
                            <a asp-action= "Index" class="btn btn-primary btn-sm">Back to Cart</a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="container rounded p-2">
                            <div class="row">
                                <div class="col-12 col-lg-6 pb-4">
                                    <div class="row">
                                        <h4 class="d-flex justify-content-between align-items-center mb-3">
                                            <span class="text-info">PickUp Details:</span>
                                        </h4>
                                    </div>
                                    <div class="row my-1">
                                        <div class="col-3">
                                            <label>Name</label>
                                        </div>
                                        <div class="col-9">
                                            <input asp-for="Booking.Name" type="text" class="form-control" />
                                            <span asp-validation-for="Booking.Name" class="text-danger"></span>
                                        </div>
                                    </div>
                                     <div class="row my-1">
                                        <div class="col-3">
                                            <label>Email Address</label>
                                        </div>
                                        <div class="col-9">
                                           <input asp-for="Booking.Email" type="text" class="form-control" />
                                            <span asp-validation-for="Booking.Email" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row my-1">
                                        <div class="col-3">
                                            <label>Phone</label>
                                        </div>
                                        <div class="col-9">
                                           <input asp-for="Booking.PhoneNumber" type="text" class="form-control" />
                                            <span asp-validation-for="Booking.PhoneNumber" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row my-1">
                                        <div class="col-3">
                                            <label>StreetAddress</label>
                                        </div>
                                         <div class="col-9">
                                        <input asp-for="Booking.StreetAddress" type="text" class="form-control" />
                                            <span asp-validation-for="Booking.StreetAddress" class="text-danger"></span> </div>
                                    </div>
                                    
                                    <div class="row my-1">
                                        <div class="col-3">
                                            <label>City</label>
                                        </div>
                                         <div class="col-9">
                                        <input asp-for="Booking.City" type="text" class="form-control" />
                                            <span asp-validation-for="Booking.City" class="text-danger"></span> </div>
                                    </div>
                                    <div class="row my-1">
                                        <div class="col-3">
                                            <label>State</label>
                                        </div>
                                         <div class="col-9">
                                        <input asp-for="Booking.State" type="text" class="form-control" />
                                            <span asp-validation-for="Booking.State" class="text-danger"></span> </div>
                                    </div>
                                    <div class="row my-1">
                                        <div class="col-3">
                                            <label>Postal Code</label>
                                        </div>
                                         <div class="col-9">
                                        <input asp-for="Booking.PostalCode" type="text" class="form-control" />
                                            <span asp-validation-for="Booking.PostalCode" class="text-danger"></span> </div>
                                          

                                    </div>
                                </div>
                                <div class="col-12 col-lg-5 offset-lg-1">
                                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                                        <span class="text-info">Order Summary:</span>
                                    </h4>
                                    <ul class="list-group mb-3 bg-light">
                                        @foreach(var details in Model.CartItems)
                                        {
                                            <li class="list-group-item d-flex justify-content-between">
                                                <div>
                                                    <h6 class="my-0">@details.Event.EventName</h6>
                                                    <small class="text-muted">Total tickets: @details.Tickets</small>
                                                </div>
                                                <span class="text-muted">@((details.Tickets * details.Event.Price).ToString("c"))</span>
                                            </li>
                                            }
                                        <li class="list-group-item d-flex justify-content-between bg-light">
                                            <strong class="text-primary">Total (USD)</strong>
                                            <strong class="text-primary">@Model.Booking.OrderTotal.ToString("c")</strong>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="row">
                            <div class="col-12 col-md-8 pt-2">
                                 </div>
                            <div class="col-12 col-md-4">

                                    <button type="submit" value="Place Order" class="btn btn-primary form-control">Place Order</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</form>
