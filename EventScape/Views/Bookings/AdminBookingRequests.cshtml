@model  EventScape.ViewModels.BookingsViewModel

@{
    ViewData["Title"] = "AdminBookingRequests";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

 


  <h1 class="text-primary align-content-center"> New Requests</h1> 
<table class="table">
    <thead>
      <tr>
           @* <th>
                 ApplicationUser
            </th>*@
            <th>
               User Name
            </th>
            <th>
               BookingDate
            </th>
            <th>
               OrderTotal
            </th>
            <th>
               BookingStatus
            </th>
            <th>
               PhoneNumber
            </th>
            <th>
              StreetAddress
            </th>
            <th>
                City
            </th>
            <th>
              State
            </th>
            <th>
                PostalCode
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.newBookingRequests) {
        <tr>
            @*<td>
                @Html.DisplayFor(modelItem => item.ApplicationUser.Id)
            </td>*@
              <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookingDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderTotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookingStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StreetAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostalCode)
            </td>
          
            <td>
                <a asp-action="BookingConfirmation" asp-route-id="@item.Id">Confirm</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                
            </td>
        </tr>
}
    </tbody>
</table>


 

