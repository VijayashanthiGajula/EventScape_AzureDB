 @using EventScape.Core
@model EventScape.Models.UserQueries

@{
    ViewData["Title"] = "UserQueryById";
    Layout = "~/Views/Shared/_Layout.cshtml";
     var ImagePath = "~/Image/" + (@Model.Events.EventPosterName?? "noimage.png");
}

<h1>Create</h1>

<h4>UserQueries</h4>
<hr />
  <div class="row">
                <div class="col-4">
                   <img src="@ImagePath"  class="rounded float-left img-fluid img-thumbnail"
                   asp-append-version="true"  >    
                   <input type="hidden" asp-for="EventId"/>
                </div>
                <div class="col-8">
                    <div class="row">
      <form asp-action="Create">
             <div class="form-group">                
                <input asp-for="UserId" hidden value="ViewBag.UserId" class="form-control" />               
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EventId" class="control-label"></label>
                 <input  asp-for="EventId" hidden  class="form-control hidden " />
                  <input  asp-for="Events.EventName"   class="form-control " />
                  
            </div>
           
            <div class="form-group">
                <label asp-for="Query" class="control-label"></label>
               
                  <textarea class="form-control" asp-for="Query" >

                  </textarea>
                <span asp-validation-for="Query" class="text-danger"></span>
            </div>
         
            
                <input asp-for="Status" value="@Constants.Status.QueryStatusActive" class="form-control" />
               
            <div class="form-group">
                
                <button type="submit" class="btn btn-dark" asp-action="UserQueryById">Post a Query</button>
            </div>
        </form>
                    </div>
                </div>
                </div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

