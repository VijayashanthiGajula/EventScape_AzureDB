@using EventScape.Core
@model EventScape.Models.UserQueries

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
     // var ImagePath = "~/Image/" + (@Model.Events.EventPosterName?? "noimage.png");
}

<h4>Choose an event to post a query</h4>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
             <div class="form-group">                
                <input asp-for="UserId" hidden value="ViewBag.UserId" class="form-control" />               
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EventId" class="control-label">Selected Event </label>
                <select asp-for="EventId" class ="form-control" asp-items="ViewBag.EventId"></select>
            </div>
           
            <div class="form-group">
                <label asp-for="Query" class="control-label"></label>
                
                  <textarea class="form-control" asp-for="Query" >

                  </textarea>
                <span asp-validation-for="Query" class="text-danger"></span>
            </div>
           
          @*  <div class="form-group">
                <label asp-for="Reply" class="control-label"></label>
                <input asp-for="Reply" class="form-control" />
                <span asp-validation-for="Reply" class="text-danger"></span>
            </div>*@
            
                
               
            <div class="form-group row py-5">
                <div class="col">

                  <a asp-action="Index"  class="btn btn-primary">Back to List</a>
                </div>
                 <div class="col">
                <input type="submit" value="Create" class="btn btn-primary" />

                </div>
                  <div class="col-6"></div>
            </div>
        </form>
    </div>
</div>



